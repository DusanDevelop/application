@model myMVCApp.ViewModels.DepartmentFormViewModel
@{
    ViewBag.Title = "New Department";
}

<h2>New Department</h2>

@using (Html.BeginForm("Save", "Department"))
{
<div class="form-group">
    @Html.LabelFor(m => m.Department.Name)
    @Html.TextBoxFor(m => m.Department.Name, new { @class = "form-control" })
    <!-- 3.) Customer.Name is requered need validation -->
    <!-- Html.ValidationMessageFor(m => m.Department.Name) -->
    </div>
 
    <!-- Add Id as a hidden field to form-->
    @Html.HiddenFor(m => m.Department.DepartmentId)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}
